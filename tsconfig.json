{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "noUnusedLocals": true,
    // to correctly transpile ES2015 collections to ES5; crucial to run on ES5
    "downlevelIteration": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@scion/toolkit/*": [
        "dist/scion/toolkit/*"
      ],
      "@scion/~toolkit/*": [
        "dist/scion/~toolkit/*"
      ]
    }
    /*
